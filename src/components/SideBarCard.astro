---
import { Image } from "astro:assets";
import Menu from "../components/SideBarCardMenu.astro"
import Footer from "../components/SideBarCardFooter.astro"
import { SITE_TITLE, SITE_DESCRIPTION, USER_NICKNAME, USER_DESCRIPTION, TRANSITION_API } from "../consts";
const {
  name,
  desc,
  includeSidebar = true,
  PageID,
} = Astro.props;
---

<div class="profile-card card bg-base-100 shadow-xl p-4">
  <div class="avatar px-6">
    <!-- 你的个人头像 -->
    <Image
      class=""
      format="png"
      width={300}
      height={300}
      src="/vdtkSearch.png"
      alt="VDTK image"
    />
  </div>
  <div class="profile-info">
  </div>
  <Menu PageID={PageID} />
  <Footer />
</div>